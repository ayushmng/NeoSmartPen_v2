<?xml version="1.0" encoding="utf-8"?>
<kr.neolab.samplecode.ZoomLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/zoom_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--        <ImageView-->
<!--            android:id="@+id/testImage"-->
<!--            android:layout_width="200dp"-->
<!--            android:layout_height="200dp"-->
<!--            android:contentDescription="test Image from database" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/no_msg1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_pages"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_marginTop="120dp"/>

        <TextView
            android:id="@+id/no_msg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_pages_message"
            android:paddingHorizontal="12dp"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <FrameLayout
            android:id="@+id/sampleview_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


</kr.neolab.samplecode.ZoomLinearLayout>